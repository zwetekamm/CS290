<h1>Home Page</h1>

<form>
    <fieldset>
      <legend>Add a Workout:</legend>
      <label for="name"></label>
      <label>Name:
          <input id="name" type="text" name="name" size="30" maxlength="100">
      </label>
      <br />
      <label>Reps:
          <input id ="reps_in" type="number" name="reps" size="30" maxlength="100">
      </label>
      <br />
      <label>Weight:
          <input id ="weight_in" type="number" name="weight" size="30" maxlength="100">
      </label>
      <br />
      <label>Date:
          <input id="date_in" type="text" name="date" size="30" maxlength="100">
      </label>
      <br />
      <input id="lbs_true" type="radio" name="lbs" value="true" />Pounds</label>
      <input id="lbs_false" type="radio" name="lbs" value="false" />Kilos</label>
      <br />
      <input type="submit" id="workout_submit">
    </fieldset>
</form>

<br />

<table id="workout_table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Reps</th>
            <th>Weight</th>
            <th>Date</th>
            <th>lbs</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody id="workout_table_body">
        {{#data.workouts}}
        <tr>
            <td id="id" style="display:none">{{id}}</td>
            <td id="name">{{name}}</td>
            <td id="reps">{{reps}}</td>
            <td id="weight">{{weight}}</td>
            <td id="date">{{date}}</td>
            <td id="lbs">{{lbs}}</td>
            <td id="delete"> <input type="button" value="delete" onClick="delete_row(this)"/></td>
            <td id="edit"> <input type="button" value="edit" onClick="edit_row(this)"/></td>
        </tr>
        {{/data.workouts}}
    </tbody>
</table>
